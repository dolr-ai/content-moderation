# Path settings
DATA_ROOT=/app/data
PROMPT_PATH=/app/data/prompts/moderation_prompts.yml

# GCP credentials - The JSON content of your service account key file
# This should be a single line, unformatted JSON string (use jq -c to compact)
# GCP_CREDENTIALS={"type":"service_account","project_id":"your-project-id",...}

# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false
RELOAD=false

# BigQuery settings
BQ_PROJECT=project-id
BQ_DATASET=dataset-name
BQ_TABLE=table-name
BQ_TOP_K=5
BQ_DISTANCE_TYPE=COSINE
BQ_OPTIONS={"fraction_lists_to_search": 0.1, "use_brute_force": false}

# Google Cloud Storage settings
GCS_BUCKET=bucket-name
GCS_EMBEDDINGS_PATH=rag/gcp-embeddings.jsonl
GCS_PROMPT_PATH=moderation_prompts.yml

# LLM settings (for future use)
LLM_URL=http://localhost:8899/v1
EMBEDDING_URL=http://localhost:8890/v1
API_KEY=your-api-key

# Application settings
MAX_INPUT_LENGTH=2000
MAX_NEW_TOKENS=128